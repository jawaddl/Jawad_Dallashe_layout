<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:foregroundTint="#00FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView_cotert"
        android:layout_width="132dp"
        android:layout_height="92dp"
        android:layout_marginTop="8dp"
        android:text="fast and furious          tokyo drift"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Big_image" />

    <ImageView
        android:id="@+id/Big_image"
        android:layout_width="618dp"
        android:layout_height="275dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc" />

    <TextView
        android:id="@+id/textView_ttCotert"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="From 2006"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/TextView_cotert"
        app:layout_constraintTop_toBottomOf="@+id/TextView_cotert" />

    <ImageView
        android:id="@+id/small_image"
        android:layout_width="224dp"
        android:layout_height="277dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/Big_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Big_image"
        app:layout_constraintVertical_bias="0.805"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/imageView_status2"
        android:layout_width="84dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_status4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_status1"
        app:srcCompat="@drawable/arrrrrrrrrrr" />

    <TextView
        android:id="@+id/textView_status2"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:text="Download"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status2"
        app:layout_constraintStart_toStartOf="@+id/imageView_status2"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status2" />

    <ImageView
        android:id="@+id/imageView_status1"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_status2"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/small_image"
        app:srcCompat="@drawable/pngegg" />

    <TextView
        android:id="@+id/textView_status1"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_status1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status1" />

    <TextView
        android:id="@+id/textView_status4"
        android:layout_width="87dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:text="Next movie"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_status3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status4" />

    <ImageView
        android:id="@+id/imageView_status3"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_status4"
        app:layout_constraintStart_toEndOf="@+id/imageView_status2"
        app:layout_constraintTop_toTopOf="@+id/imageView_status1"
        app:srcCompat="@drawable/add" />

    <ImageView
        android:id="@+id/imageView_status4"
        android:layout_width="84dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_status1"
        app:srcCompat="@drawable/next" />

    <TextView
        android:id="@+id/textView_status3"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="Add to Favorites"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView_status3"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/imageView_status3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_status3" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#FFC400"
        android:foregroundTint="#00FFFFFF"
        android:scrollbarSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_status3"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="391dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="399dp" />

    <ImageView
        android:id="@+id/imageView_star"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/TextView_cotert"
        app:layout_constraintTop_toBottomOf="@+id/Big_image"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView_Dirog"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="10.0"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_star"
        app:layout_constraintTop_toBottomOf="@+id/imageView_star" />

    <TextView
        android:id="@+id/plot"
        android:layout_width="99dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="the plot:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/plot2"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:text="A teenager becomes a major competitor in the world of drift racing after moving in with his father in Tokyo to avoid a jail sentence in America. A teenager becomes a major competitor in the world of drift racing after moving in with his father in Tokyo to avoid a jail sentence in America."
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/plot"
        app:layout_constraintTop_toBottomOf="@+id/plot" />

</androidx.constraintlayout.widget.ConstraintLayout>